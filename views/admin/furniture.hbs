<div class="container">
    <div class="row justify-center">
        {{#each furniture}}
        <div class="col-md-3 col-sm-4">
            <div class="single-new-arrival">
                <div class="single-new-arrival-bg">
                    <a href="/admin/{{id}}"><img src="{{ img}}" alt="new-arrivals images"></a>
                    <div class="single-new-arrival-bg-overlay"></div>
                    {{#if isSale}}
                    <div class="sale bg-1">
                        <p>sale</p>
                    </div>
                    {{/if}}
                    <div class="new-arrival-cart">
                        <button style="boder none , background-color:#33383c " class="btn btn-primary how" ><a href="/admin/{{id}}" style="list">Mebel ko'rish</a></button>
                        <p>
                            <span class="lnr lnr-cart"></span>
                            <a href="#">add <span>to </span> cart</a>
                        </p>
                        <p class="arrival-review pull-right">
                            <span class="lnr lnr-heart"></span>
                            <span class="lnr lnr-frame-expand"></span>
                        </p>
                    </div>
                </div>
                <h4><a href="#">{{name}}</a></h4>
                <p class="arrival-product-price">$ {{cost}}</p>
            </div>
        </div>
        {{/each}}

        <div class="col-lg-3">
            <form action="/admin/furniture/add" method="POST">
                <h2 style="margin-top: 15px !important; margin-bottom: 15px !important">Mebel qo'shish</h2>
                <div class=" mb-3">
                    <label for="name" class="form-label"> mebel nomi </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="name" class="form-control"
                        id="name" placeholder="divan , kreslo">
                </div>
                <div class="mb-3 ">
                    <label for="img" class="form-label">Mebel rasmi </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="img" class="form-control" id="img"
                        placeholder=" rasm url manzili">
                </div>
                <div class="mb-3 ">
                    <label for="des" class="form-label"> mebel narhi </label>
                    <input type="number" style="margin-bottom: 15px !important;" name="cost" class="form-control"
                        id="cost" placeholder=" ..... $ ">
                </div>
                <div class="form-check">
                    <input name="isSale" class="form-check-input" type="checkbox" value=true id="flexCheckDefault">
                    <label class="form-check-label" value="true" for="flexCheckDefault">
                        is Sale?
                    </label>
                </div>
                <div class="mb-3 ">
                    <label for="des" class="form-label"> mebel haqida </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="des" class="form-control" id="des"
                        placeholder=" kategoriya haqida ...">
                </div>
                <select for="categoryId" placeholder="Furniture category" name="categoryId" class="form-select mb-3"
                    aria-label="multiple select example">
                    {{#if category.length}}
                    {{#each category}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                    {{else}}
                    <option value="null">hech nima yo'q</option>
                    {{/if}}
                </select>
                <button class="btn btn-primary" type="submit">Create category</button>
            </form>
        </div>

    </div>
</div>