<div class="container">
    <div class="row justify-center">

        <div class="col-lg-3">
            <form action="/admin/category/add" method="POST">
                <h2 style="margin-top: 15px !important; margin-bottom: 15px !important">Mebel qo'shish</h2>


                <div class=" mb-3">
                    <label for="name" class="form-label"> mebel nomi </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="name" class="form-control"
                        id="name" placeholder="divan , kreslo">
                </div>

                <div class="mb-3 ">
                    <label for="img" class="form-label">Mebel rasmi </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="img" class="form-control" id="img"
                        placeholder=" rasm url manzili">
                </div>

                <div class="mb-3 ">
                    <label for="des" class="form-label"> mebel narhi </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="des" class="form-control" id="des"
                        placeholder=" kategoriya haqida ...">
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        sale dami
                    </label>
                </div>

                <div class="mb-3 ">
                    <label for="des" class="form-label"> mebel haqida </label>
                    <input type="text" style="margin-bottom: 15px !important;" name="des" class="form-control" id="des"
                        placeholder=" kategoriya haqida ...">
                </div>

                <select class="form-select" multiple aria-label="multiple select example">
                    {{#each}}

                    <option value="{{id}}">{{}}<option>

                    {{/each}}
                   
                   
                </select>

                <button class="btn btn-primary" type="submit">Create category</button>

            </form>
        </div>

    </div>
</div>